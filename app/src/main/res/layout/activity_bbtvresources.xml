<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="buffml.com.banbun.BBTVResources">

    <TextView
        android:id="@+id/bbtvText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        android:text="Banana Bunchy Top Virus"
        android:textColor="@color/greenAccent"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/bbtvText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/BBTVdes"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="Banana bunchy top disease (BBTD), caused by the Banana bunchy top virus (BBTV) belonging to the family Nanoviridae and genus Babuvirus, poses a significant economic threat to banana cultivation in various production regions, including Asia, Africa, and the South Pacific. The virus was initially reported in Hawai‘i in 1989 and has since progressively spread throughout banana-growing areas in the island chain. BBTV stands as a major challenge to local banana production in Hawai‘i. In March 2003, a pest-management strategic plan for banana production in Hawai‘i listed managing BBTV as the top research priority. Early BBTV infections result in fruitless banana plants, and the fruit of later-infected plants is typically stunted and unsuitable for the market. Additionally, the virus spreads to suckers via the rhizome, leading to the eventual infection of the entire banana mat. The transmission of Banana bunchy top virus occurs in a circulative, persistent, non-propagative manner through the banana aphid, Pentalonia nigronervosa Coquerel."
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toTopOf="@id/largeImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/largeImageView"
                android:layout_width="wrap_content"
                android:layout_height="500dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bbtv_resources"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/BBTVdes" />

            <TextView
                android:id="@+id/sourceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="16dp"
                android:autoLink="web"
                android:gravity="center"
                android:text="Source: https://cms.ctahr.hawaii.edu/wangkh/Research-and-Extension/Banana-IPM/Guidebook/CHPT2-BBTV"
                android:textColor="@color/black"
                android:textColorLink="#034BC6"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/largeImageView" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
